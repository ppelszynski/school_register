<h1><%= t('.change_your_password') %></h1>

<%= simple_form_for @form, url: url_for(:controller => 'confirmations',  :action => 'update') do |f| %>
  <%= f.input :password, autofocus: true, class: 'form-control'  %>

  <%= f.input :password_confirmation, autocomplete: 'off', class: 'form-control'  %>

  <%= f.button :submit, 'Set password', class: 'btn btn-primary' %>
<% end %>
