<table class = "table">
  <tr>
    <th>Name</th>
    <th>Adress</th> 
  </tr>
  <% @schools.each do |school| %>
    <tr>
      <% if current_user.is_candidate? %>
        <td><%= link_to school.name, school_school_classes_path(school) %></td>
      <% else %>
        <td><%= link_to school.name, school_path(school) %></td>
      <% end %>
      <td><%= school.adress %></td>
    </tr>
  <% end %>
</table>

<div class="btn btn-outline-dark">
   <%=link_to 'Add school', new_school_path, class: 'btn'%>
</div>

